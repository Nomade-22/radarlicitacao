  <div class="backdrop" id="backdrop" aria-hidden="true">
    <div class="modal" role="dialog" aria-modal="true" aria-labelledby="leadTitle">
      <div class="hd">
        <b id="leadTitle">Quero acesso ao Radar Licitações</b>
        <button class="x" id="btnClose" aria-label="Fechar">✕</button>
      </div>
      <div class="bd">
        <div class="field">
          <label for="nome">Nome</label>
          <input id="nome" placeholder="Seu nome" autocomplete="name">
        </div>
        <div class="field">
          <label for="email">E-mail</label>
          <input id="email" placeholder="seuemail@empresa.com" autocomplete="email">
        </div>
        <div class="field">
          <label for="whats">WhatsApp</label>
          <input id="whats" placeholder="(51) 99999-9999" inputmode="tel">
        </div>

        <button class="btn primary" id="btnEnviar">
          <span class="dot"></span> Enviar pedido
        </button>

        <div class="note">
          Sem backend: ao enviar, você será direcionado para um link (WhatsApp ou e-mail) com a mensagem pronta.
          Depois você pode integrar com um formulário real (Google Forms, CRM, etc.).
        </div>
      </div>
    </div>
  </div>

  <script>
    const $ = (s)=>document.querySelector(s);
    const $$ = (s)=>document.querySelectorAll(s);

    // Ano no rodapé
    $("#year").textContent = new Date().getFullYear();

    // Modal
    const backdrop = $("#backdrop");
    const openLead = ()=>{ backdrop.style.display="flex"; backdrop.setAttribute("aria-hidden","false"); };
    const closeLead = ()=>{ backdrop.style.display="none"; backdrop.setAttribute("aria-hidden","true"); };

    $("#btnLead").addEventListener("click", openLead);
    $("#btnClose").addEventListener("click", closeLead);
    backdrop.addEventListener("click", (e)=>{ if(e.target === backdrop) closeLead(); });
    document.addEventListener("keydown", (e)=>{ if(e.key === "Escape") closeLead(); });

    $$("[data-open-lead]").forEach(b=> b.addEventListener("click", openLead));

    // Envio: WhatsApp ou Email
    const SEU_WHATSAPP = "5551999999999"; // <-- troque: país+DDD+número (sem espaços)
    const SEU_EMAIL = "contato@radarlicitacoes.com"; // <-- troque

    $("#btnEnviar").addEventListener("click", ()=>{
      const nome = ($("#nome").value || "").trim();
      const email = ($("#email").value || "").trim();
      const whats = ($("#whats").value || "").trim();

      const msg =
`Olá! Quero acesso ao Radar Licitações.
Nome: ${nome || "-"}
E-mail: ${email || "-"}
WhatsApp: ${whats || "-"}
Interesse: conhecer planos e demo.`;

      // WhatsApp (recomendado)
      const urlWpp = "https://wa.me/" + SEU_WHATSAPP + "?text=" + encodeURIComponent(msg);

      // Email (alternativa)
      const urlMail = "mailto:" + encodeURIComponent(SEU_EMAIL)
        + "?subject=" + encodeURIComponent("Pedido de acesso — Radar Licitações")
        + "&body=" + encodeURIComponent(msg);

      // >>> Escolha aqui qual abrir:
      window.open(urlWpp, "_blank");
      // window.location.href = urlMail;

      closeLead();
    });

    // Scroll suave para âncoras
    document.querySelectorAll('a[href^="#"]').forEach(a=>{
      a.addEventListener("click", (e)=>{
        const id = a.getAttribute("href");
        if(!id || id === "#") return;
        const el = document.querySelector(id);
        if(!el) return;
        e.preventDefault();
        el.scrollIntoView({behavior:"smooth", block:"start"});
      });
    });
  </script>

